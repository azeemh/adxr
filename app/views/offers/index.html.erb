<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Link to image</th>
      <th>Is capped</th>
      <th>Epc</th>
      <th>Lp offer name</th>
      <th>Rank</th>
      <th>Zlink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.title %></td>
        <td><%= offer.link_to_image %></td>
        <td><%= offer.is_capped %></td>
        <td><%= offer.EPC %></td>
        <td><%= offer.lp_offer_name %></td>
        <td><%= offer.rank %></td>
        <td><%= offer.zlink %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

